@model BusBookingSystem.Domain.Models.AvailabilityDetails

@using (Html.BeginForm("SaveAvailabilityDetails", "BusAvailability", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <table border="1" class="jumbotron" >
        <tr>
            <td>
                <p>Bus Number:</p>
            </td>
            <td>@Html.DisplayFor(m => m.BusNumber)</td>
        </tr>
        <tr>
            <td><p>From:</p></td>
            <td>@Html.DisplayFor(m=>m.OriginLocation)</td>
        </tr>
        <tr>
            <td>To:</td>
            <td>@Html.DisplayFor(m => m.DestinationLocation)</td>
        </tr>

        <tr>
            <td colspan="2"><p>Days of Week Available</p></td>
        </tr>
        <tr>
            <td>Monday</td>
            <td>@Html.CheckBoxFor(m=>m.Monday)</td>
        </tr>
        <tr>
            <td>Tuesday</td>
            <td>@Html.CheckBoxFor(m => m.Tuesday)</td>
        </tr>
        <tr>
            <td>Wednesday</td>
            <td>@Html.CheckBoxFor(m => m.Wednesday)</td>
        </tr>
        <tr>
            <td>Thursday</td>
            <td>@Html.CheckBoxFor(m => m.Thursday)</td>
        </tr>
        <tr>
            <td>Friday</td>
            <td>@Html.CheckBoxFor(m => m.Friday)</td>
        </tr>
        <tr>
            <td>Saturday</td>
            <td>@Html.CheckBoxFor(m => m.Saturday)</td>
        </tr>
        <tr>
            <td>Sunday</td>
            <td>@Html.CheckBoxFor(m => m.Sunday)</td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:center"><input type="submit" value="Save" /></td>
        </tr>
    </table>

    
}