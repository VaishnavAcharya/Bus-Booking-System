@model BusBookingSystem.WebApp.ViewModels.BusDetailsViewModel

@using (Html.BeginForm("AddBusDetails", "Bus", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)

    <table >
        <tr>
            <td>@Html.Label("Bus Registration Number")  </td>
            <td>
                <div class="col-sm-3">
                    @Html.TextBoxFor(m => m.BusNumber)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Number of seated chairs")
            </td>
            <td>
                <div class="col-sm-3">
                    @Html.TextBoxFor(m => m.NumOfChairSeats)
                </div>
            </td>
        </tr>
        <tr>
            <td>

                @Html.Label(" Number of Sleeper seats")

            </td>
            <td>
                <div class="col-sm-3">
                    @Html.TextBoxFor(m => m.NumOfSleeperSeats)
                </div>
            </td>
        </tr>
        <tr>
            <td>

                @Html.Label("Company Name")

            </td>
            <td style="text-align:center">
                @Html.DropDownListFor(m => m.CompanyId, new SelectList(Model.BusCompanyNames, "Id", "Name", Model.CompanyId), "------Select------")
            </td>
        </tr>
        <tr>
            <td>

                @Html.Label("Origin Location")

            </td>
            <td style="text-align:center">
                @Html.DropDownListFor(m => m.OriginLocation, new SelectList(Model.OriginLocations, "Name", "Name"), "------Select------")
            </td>
        </tr>
        <tr>
            <td>

                @Html.Label("Destination Location")

            </td>
            <td style="text-align:center">
                @Html.DropDownListFor(m => m.DestinationLocation, new SelectList(Model.DestinationLocations, "Name", "Name"), "------Select------")
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Bus Type")
            </td>
            <td style="text-align:center">
                @Html.DropDownListFor(m => m.BusTypeId, new SelectList(Model.BusTypes, "Id", "Type"), "------Select------")
            </td>
        </tr>
        <tr>
            <td >
                <input type="submit" class="btn btn-primary" value="Add Bus" id="btnAdd" style="display:block" />
            </td>
        </tr>

    </table>

    <br /><br />
        <table class="table table-striped" border="1" style="text-align:center">
            <tr>
                <th>Company Name</th>
                <th>Bus Type</th>

                <th>Origin</th>
                <th>Destination</th>
                <th>Chair Seats</th>
                <th>Sleeper Seats</th>
                <th>Bus Number</th>
                <th>Edit Details</th>
                <th>Delete</th>
            </tr>
            @foreach (var item in Model.BusDetails)
            {

                <tr style="text-align:center">
                    <td>
                        @Html.Label(item.BusCompanyName.Name)
                    </td>
                    <td>
                        @Html.Label(item.BusType.Type)
                    </td>
                    <td>
                        @Html.Label(item.OriginLocation)
                    </td>
                    <td>
                        @Html.Label(item.DestinationLocation)
                    </td>
                    <td>
                        @Html.Label(item.NumOfChairSeats.ToString())
                    </td>
                    <td>
                        @Html.Label(item.NumOfSleeperSeats.ToString())
                    </td>
                    <td>
                        @Html.Label(item.BusNumber.ToString())
                    </td>
                    <td>
                        <div id="Edit">
                            @Html.ActionLink("Edit", "EditBusDetails", new { Id = @item.Id })
                        </div>
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteBusDetails", new { Id = @item.Id })
                    </td>
                </tr>

            }
        </table>





}



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

